
<h3>Information for <%= @subdomain %></h3>
<br>
<div class="row">
    <div class="col-md-8">
        <div id="container" style="height: 400px; min-width: 310px"></div>
    </div>
    <div class="col-md-4">
        <h4>Most active pages in the last hour</h4>
        <ol>
        <% @active_pages.each do |page| %>
            <li class="text-left"><%= page.page %> - <%= page.count %></li>
        <% end %>
        </ol>
        <h4>Most active users in the last hour</h4>
        <ol>
        <% @active_users.each do |user| %>
            <li class="text-left"><%= user.username %> - <%= user.c %></li>
        <% end %>
        </ol>
    <div>
</div>


<%= javascript_tag do %>
    var subdomain = '<%= @subdomain.html_safe %>';
<% end %>
